#!/bin/bash

DPI_LOW=100
DPI_HIGH=160

echo "Xft.dpi: $DPI_LOW" >> $HOME/.Xresources
xrdb -merge $HOME/.Xresources
i3-msg restart
dmenu_run
while [ 1 != 2 ]
    do
    if [ $(ps aux | grep dmenu | wc -l) == 1 ]
        then
        sleep 3
        echo "Xft.dpi: $DPI_HIGH" >> $HOME/.Xresources
        xrdb -merge $HOME/.Xresources
        i3-msg restart && kill -9 $$
    fi
done

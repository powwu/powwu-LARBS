[volume]
command=pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed 's,.* \([0-9][0-9]*\)%.*,\1, ' | xargs echo "üîà"
interval=1

[seperator]

[ip-global]
command=curl -4s icanhazip.com | xargs echo "üåê"
interval=10

[seperator]

[ip-local]
command=ip -json route get 8.8.8.8 | jq -r '.[].prefsrc' | xargs echo "üîí"
interval=10

[seperator]

[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo "üåà"
interval=10

[seperator]

[time]
instance=et
TZ=America/New_York
command=date +%A,\ %B\ %d\ at\ %T | xargs echo "üìÖ"
interval=1

[seperator]

